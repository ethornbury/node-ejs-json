<!DOCTYPE html>
<html>
    <head>
        <% include partials/header %>
    </head>
    <body>
        <div class="w3-container l3 w3-text-grey w3-padding" >
            <% include partials/nav %>
                <div class="w3-row">
                    <div class="w3-col l1">
                        <p></p>
                    </div>
                    <div class="w3-col l3">
                        
                        <% indOne.forEach(function(contacts) { %>
                        <h2>Edit Contact <%= contacts.name %></h2>
              
                        <form action="/edit-contact/<%= contacts.name %>" method="post" class="w3-container">        
                            <div class="item">
                                <label for="id" name="newid">ID: <%= contacts.id %></label>
                                <br />
                                <input name="newid" type="text" class="w3-input" value="<%= contacts.id %>" style="display:none;"/>
                                <br /> 
                                <label for="name">Name:</label>
                                <br />
                                <input name="newname" type="text" class="w3-input" value="<%= contacts.name %>"/>
                                <br />
                                <label for="email">Email:</label>
                                <br />
                                <input name="newemail" type="text" class="w3-input" value="<%= contacts.email %>"/>
                                <br />
                                <label for="comment">Comment:  </label>
                                <br />
                                <input class="w3-input" name="newcomment" type="text" value="<%= contacts.comment %>" />
                                <br />
                                <button class="w3-btn w3-teal">Update</button>
                            </div>
                        </form>
                        
                    <% }); %>    
                    </div>
                    <div class="w3-col l3">
                    </div>
                    <div class="w3-col l3">
                    </div>
                </div>
            <% include partials/footer %>
          </div>
    </body>
</html>