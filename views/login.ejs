<!DOCTYPE html>
<html>
    <head>
        <% include partials/header %>
    </head>
    <body>
          <div class="w3-container l3 w3-text-grey w3-padding" >
            <% include partials/nav %>
            <% include partials/search %>
                <div class="w3-row w3-grayscale">
                    <div class="w3-col l1">
                        <p></p>
                    </div>
                    <div class="w3-col l3">
                        <h1><span class="fa fa-sign-in"></span> Login</h1>
                        <!-- show any messages that come back with authentication -->
                        <% if (message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>
                        <!-- LOGIN FORM -->
                      <div class="w3-panel w3-border w3-hover-border-teal">
                        <form action="/login" method="post">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" name="username">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <div class="form-group">
                                <label>Remember Me</label>
                                <input type="checkbox" class="form-control" name="remember" value="yes">
                            </div>

                            <button type="submit" class="w3-button w3-teal">Login</button>
                        </form>
                      </div>

                    <div class="w3-col l3">
                        <p class="itemtitle">Need an account? <br> <a href="/signup" class="button">Signup</a></p>
                        <pclass="itemtitle">Or go <br><a href="/" class="button">home</a>.</p>
                    </div>
                </div>
            <% include partials/footer %>
          </div>
  </body>
</html>